@inherits LayoutComponentBase
@rendermode InteractiveServer

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudAppBar Class="app-bar px-2" Elevation="4">
    <MudText Typo="Typo.h6">
        Tricycle Fare and Passenger Management
    </MudText>

    <MudSpacer /> 

    <MudNavMenu Class="d-flex ml-10" Style="gap: 1rem;">
        <MudNavLink Href="/userdashboard" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">
            Dashboard
        </MudNavLink>

        <MudNavLink Href="/passengers" Icon="@Icons.Material.Filled.People"
                    Style="white-space: nowrap;">
            Passenger List
        </MudNavLink>

        <MudNavLink Href="/reports" Icon="@Icons.Material.Filled.History"
                    Style="white-space: nowrap;">
           Daily Reports
        </MudNavLink>

        <MudNavLink Href="/drivers" Icon="@Icons.Material.Filled.DirectionsBus">
            Drivers
        </MudNavLink>

       
    </MudNavMenu>
</MudAppBar>


<MudContainer>

    <MudMainContent>
        <MudContainer class="content px-4">
            @Body
        </MudContainer>
    </MudMainContent>

</MudContainer>
